<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/awit"

    tools:context=".MainActivity">


    <TextView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/arbutus_slab"
        android:rotationX="37"
        android:text="EX-TRACK"
        android:textAlignment="center"
        android:textColor="#997FBC6F"
        android:textSize="51dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="285dp"
        android:layout_height="69dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#4F02391B"
        android:onClick="tapToAnimate"

        android:fontFamily="@font/assistant_semibold"

        android:text="Start Tracking"
        android:textColor="#F264C664"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="250dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-14dp"
        android:layout_marginEnd="-16dp"
        android:rotationX="-29"
        android:rotationY="8"
        android:tint="#341A4204"
        app:lottie_autoPlay="true"
        app:lottie_fileName="sample.json"
        app:lottie_loop="true" />


</RelativeLayout>